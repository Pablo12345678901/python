#:import utils kivy.utils
#:set color1 "#DD7835"
#:set color2 "#C8C8C8"

MainWidget:

<CoverImage@CoverBehavior+Image>:
    reference_size: self.texture_size

<MainWidget>:
    recycleView: recycleView # établissement de la propriété à la valeur de l'id

    CoverImage:
        source: "RESSOURCES/images/menu_background.jpg"
        canvas:
            Color:
                #DEBUG rgb: utils.get_random_color()
                rgba: 0, 0, 0, 0.6
            Rectangle:
                pos: self.pos
                size: self.size

    BoxLayout:
        orientation: "vertical"
        Image:
            source: "RESSOURCES/images/small_logo.png"
            size_hint: None, None
            size: dp(150), dp(60)
            allow_stretch: True
            pos_hint: {"center_x" : .5}

        TitleLabel:
            text: "Les Pizzas"

        BoxLayout:
            padding: dp(20), dp(20)
            canvas.before:
                Color:
                    #rgb: utils.get_random_color()
                    rgba: 0, 0, 0, 0
                Rectangle:
                    pos: self.pos
                    size: self.size

            RecycleView:
                id: recycleView # création de l'id pour <RecycleView>
                viewclass: 'PizzaWidget'
                # viewclass : y mettre la cellule pour le recycle view entre guillemets
                canvas.before:
                    Color:
                        #rgb: utils.get_random_color()
                        rgba: 0, 0, 0, 0
                    Rectangle:
                        pos: self.pos
                        size: self.size
                RecycleBoxLayout:
                    default_size: None, dp(56)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    spacing: dp(16)
        Label:
            text: root.error_str
            size_hint: 1, None
            height: dp(30) if root.error_str else dp(0)
            #size: self.texture_size
            font_size: dp(12)
            bold: True
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size


<LeftAlignLabel@Label>:
    text_size: self.size
    halign: "left"
    valign: "center"
    canvas.before:
        Color:
            #rgb: utils.get_random_color()
            rgba: 0, 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size

<RightAlignLabel@Label>:
    #text_size: self.size
    #halign: "right"
    #valign: "center"
    size_hint: None, None
    size: self.texture_size
    canvas.before:
        Color:
            #rgb: utils.get_random_color()
            rgba: 0, 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size

<FitLabel@Label>:
    size_hint: None, None
    size: self.texture_size

<TitleLabel@FitLabel>:
    padding : dp(16), dp(3)
    font_size: dp(22)
    bold: True
    color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex(color1)
        Rectangle:
            pos: self.pos
            size: self.size

<Badge@FitLabel>:
    #Fitlabel est une class que j'ai créée et qui hérite de Label
    color: 0, 0, 0, 1
    bold: True
    font_size: dp(10)
    padding: dp(8), dp(3) # horizontal, vertical
    canvas.before:
        Rectangle:
            source: "RESSOURCES/images/badge.png"
            pos: self.pos
            size: self.size

<PizzaWidget>:
    BoxLayout:
        size_hint_max_x: dp(300) # uniquement en valeur fixe, ne fonctionne pas avec des proportion
        size_hint_min_x: dp(150)
        orientation: "vertical"
        BoxLayout:
            spacing: dp(10)
            FitLabel:
                text: root.nom
                font_size: dp(22)
                bold: True
            Badge:
                text: "VÉGÉTARIENNE" if root.vegetarienne else ""
        LeftAlignLabel:
            text: root.ingredients
            color: utils.get_color_from_hex(color2)
    RightAlignLabel:
        #text: str(root.prix)+" CHF"
        text: "{:.2f}".format(root.prix)+" CHF"
        font_size: dp(20)
        color: utils.get_color_from_hex(color1)
        pos_hint: {"top": .9}
        pos_hint: {"right": 9}
        canvas.before:
            Color:
                rgb: utils.get_random_color()
                rgba: 0, 0, 0, 0
            Rectangle:
                pos: self.pos
                size: self.size








